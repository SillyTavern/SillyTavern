{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "node",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "checkJs": true,
        "allowUmdGlobalAccess": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "public/lib",
        "backups/*",
        "data/*",
        "**/dist/*",
        "dist/*",
        "cache/*",
        "src/tokenizers/*",
        "docker/*",
    ]
}
